<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.example.administrator.partymemberconstruction.ForgetPswActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#D6504D">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="忘记密码"
            android:textColor="#fff"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/link"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:src="@mipmap/detailback" />

    </RelativeLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
        android:id="@+id/line1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:focusable="true"
        android:gravity="bottom|center_horizontal"
        android:text="1.填写账号 >"
        android:textColor="@color/black"
        android:id="@+id/one"
        android:textSize="12sp"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom|right"
        android:text="1. 验证身份 "
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:id="@+id/two"
        />
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:text=">"
            android:textColor="@color/gray"
            android:textSize="12sp"
            />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom|left"
        android:text="2. 设置新密码 "
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:id="@+id/three"
        />

</LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/first"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="26dp"
                android:text="账号"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/shape_notice_btn"
                android:gravity="center_vertical"
                android:hint="用户名/邮箱/手机号"
                android:maxLength="20"
                android:paddingLeft="13dp"
                android:textColorHint="#ccc"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="26dp"
                android:text="验证码"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/shape_notice_btn"
                    android:gravity="center_vertical"
                    android:hint="验证码"
                    android:maxLength="13"
                    android:paddingLeft="13dp"
                    android:textColorHint="#ccc"
                    android:textSize="14sp"
                    android:focusedByDefault="false"
                    android:id="@+id/codeNum"
                    />

                <ImageView
                    android:id="@+id/code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="#ffff"
                    android:gravity="center"
                    android:clickable="true"
                    android:paddingLeft="10dp"
                    />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/second"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="26dp"
                android:text="手机号"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/shape_notice_btn"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入手机号"
                    android:maxLength="13"
                    android:paddingLeft="13dp"
                    android:textColorHint="#ccc"
                    android:textSize="14sp"
                    android:focusedByDefault="false"
                    android:id="@+id/phone"
                    />

                <TextView
                    android:id="@+id/code2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/shape_code_red"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="#fff"
                    android:clickable="true"
                    android:textSize="14sp" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="26dp"
                android:text="验证码"
                android:textSize="16sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/shape_notice_btn"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:maxLength="20"
                android:paddingLeft="13dp"
                android:textColorHint="#ccc"
                android:textSize="14sp"
                android:id="@+id/edtCode"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/third"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="26dp"
                android:text="密码"
                android:textSize="16sp" />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/shape_notice_btn"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:maxLength="12"
                android:paddingLeft="13dp"
                android:textColorHint="#ccc"
                android:textSize="14sp"
                android:id="@+id/psw"
                android:password="true"
                >
                <requestFocus />
            </EditText>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
android:layout_marginRight="40dp"
        android:id="@+id/see"
        android:clickable="true"
        android:src="@mipmap/see"
        />
</RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="26dp"
                android:text="确认密码"
                android:textSize="16sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/shape_notice_btn"
                android:gravity="center_vertical"
                android:hint="请再次输入密码"
                android:maxLength="20"
                android:paddingLeft="13dp"
                android:textColorHint="#ccc"
                android:textSize="14sp"
                android:id="@+id/surePsw"
                android:password="true"
                />
        </LinearLayout>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape_forget_red"
        android:gravity="center"
        android:clickable="true"
        android:text="下一步"
        android:textSize="16sp"
        android:id="@+id/register"
        android:textColor="#fff"
        android:layout_marginBottom="14dp"
        android:layout_alignParentBottom="true"
        />
    </RelativeLayout>
</LinearLayout>

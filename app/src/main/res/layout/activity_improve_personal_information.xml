<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.example.administrator.partymemberconstruction.ImprovePersonalInformationActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#D6504D">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="完善信息"
            android:textColor="#fff"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/link"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/detailback"
            android:clickable="true"
            />

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/link"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="14sp"
            android:clickable="true"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="26dp"
                android:text="姓名"
                android:textSize="16sp"
                android:textColor="#333"
                />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/shape_notice_btn"
                android:gravity="center_vertical"
                android:hint="请输入姓名"
                android:maxLength="20"
                android:paddingLeft="13dp"
                android:textColorHint="#ccc"
                android:textSize="14sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="26dp"
                android:text="生日"
                android:textSize="16sp"
                android:textColor="#333"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="65dp"
                    android:layout_marginRight="65dp"
                    android:text="性别"
                    android:textColor="#333"
                    android:textSize="16sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/shape_notice_btn"
                    android:gravity="center_vertical"
                    android:hint="生日"
                    android:paddingLeft="13dp"
                    android:textColorHint="#ccc"
                    android:textSize="14sp"
                    android:focusedByDefault="false"
                    android:id="@+id/birthday"
                    android:layout_marginRight="15dp"
                    />
<RadioGroup
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:orientation="horizontal"
    android:background="@drawable/shape_notice_btn"
    android:gravity="center"
    android:id="@+id/sex"
    >
    <RadioButton
        android:paddingLeft="8dp"
        android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:background="#0000"
        android:button="@null"
        android:gravity="center"
        android:textColor="@drawable/selector_sex_text_color"
        android:checked="true"
        android:id="@+id/man"
    android:text="男"/>
    <RadioButton
        android:id="@+id/woman"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:button="@null"
        android:gravity="center"
        android:paddingRight="8dp"
        android:background="#0000"
        android:textColor="@drawable/selector_sex_text_color"
        android:text="女"/>
</RadioGroup>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="26dp"
                android:text="所属组织"
                android:textSize="16sp"
                android:textColor="#333"
                />

            <TextView
                android:id="@+id/group"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/shape_notice_btn"
                android:gravity="center_vertical"
                android:hint="第五支部"
                android:paddingLeft="13dp"
                android:textColorHint="#ccc"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="26dp"
                android:text="部门"
                android:textSize="16sp"
                android:textColor="#333"
                />

            <TextView
                android:id="@+id/part"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/shape_notice_btn"
                android:gravity="center_vertical"
                android:hint="部门信息"
                android:paddingLeft="13dp"
                android:textColorHint="#ccc"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="26dp"
                android:text="组织职责"
                android:textSize="16sp"
                android:textColor="#333"
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="14dp"
                android:orientation="horizontal"
                android:background="@drawable/shape_notice_btn"
                android:gravity="center"
                android:id="@+id/organization"
                >
                <RadioButton
                    android:paddingLeft="8dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#0000"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@drawable/selector_sex_text_color"
                    android:checked="true"
                    android:id="@+id/controller"
                    android:text="管理员"/>
                <RadioButton
                    android:id="@+id/member"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingRight="8dp"
                    android:background="#0000"
                    android:textColor="@drawable/selector_sex_text_color"
                    android:text="普通党员"/>
            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="26dp"
                android:text="邮箱"
                android:textSize="16sp"
                android:textColor="#333"
                />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/shape_notice_btn"
                android:gravity="center_vertical"
                android:hint="请输入邮箱"
                android:maxLength="20"
                android:paddingLeft="13dp"
                android:textColorHint="#ccc"
                android:textSize="14sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="26dp"
                    android:text="地址"
                    android:textSize="16sp"
                    android:textColor="#333"
                    android:id="@+id/stringaddress"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/stringaddress"
                    android:layout_marginLeft="20dp"
                    android:text="选填"
                    android:textColor="#ccc"
                    android:textSize="16sp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/shape_notice_btn"
                android:gravity="center_vertical"
                android:hint="请输入地址"
                android:maxLength="20"
                android:paddingLeft="13dp"
                android:textColorHint="#ccc"
                android:textSize="14sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="26dp"
                    android:text="简介"
                    android:textSize="16sp"
                    android:textColor="#333"
                    android:id="@+id/stringbrief"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/stringbrief"
                    android:layout_marginLeft="20dp"
                    android:text="选填"
                    android:textColor="#ccc"
                    android:textSize="16sp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/brief"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/shape_notice_btn"
                android:hint="请输入简介"
                android:maxLength="225"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="5dp"
                android:textColorHint="#ccc"
                android:textSize="14sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/register"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text="我已阅读并同意"
                        android:textColor="#ccc"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/rule"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="@string/rule"
                        android:textColor="#e6454a"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/register"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/shape_register_red"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="完成"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>

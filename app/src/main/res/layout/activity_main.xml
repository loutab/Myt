<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.partymemberconstruction.LoadingActivity"
    android:background="@mipmap/background"
    android:id="@+id/line1"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正通智慧党建"
        android:textSize="16sp"
        android:textColor="#E6E045"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/party"
        />

    <LinearLayout
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/party"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape1_btn"
        android:id="@+id/user"
        android:layout_marginTop="52dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/userImg"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@mipmap/account" />

        <EditText
            android:background="@null"
            android:layout_marginTop="12dp"
            android:id="@+id/userEdt"
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:hint="用户名/邮箱/手机"
            android:textSize="11sp"
            android:textColor="#C7BDBD"
            android:layout_marginLeft="16dp"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignEnd="@+id/user"
        android:layout_alignLeft="@+id/user"
        android:layout_alignRight="@+id/user"
        android:layout_alignStart="@+id/user"
        android:layout_below="@+id/user"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape1_btn"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/passwordImg"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:src="@mipmap/password" />

        <EditText
            android:id="@+id/passwordEdt"
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:hint="密码"
            android:textColor="#C7BDBD"
            android:password="true"
            android:textSize="11sp" />
    </LinearLayout>

    <Button
        android:id="@+id/loading"
        android:layout_width="256dp"
        android:layout_height="36dp"
        android:layout_alignEnd="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignRight="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_below="@+id/password"
        android:layout_marginTop="22dp"
        android:background="@drawable/shape_btn"
        android:padding="0dp"
        android:text="登陆"
        android:textColor="#fff"
        android:textSize="16sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/loading"
        android:layout_marginTop="26dp"
        >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="|"
    android:textColor="#fff"
    android:layout_centerHorizontal="true"
    android:textSize="12sp"
    android:id="@+id/center"
    />

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:layout_toLeftOf="@+id/center"
            android:layout_toStartOf="@+id/center"
            android:text="注册账号"
            android:textColor="#fff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/center"
            android:layout_toRightOf="@+id/center"
            android:text="忘记密码"
            android:textColor="#fff"
            android:textSize="12sp" />
    </RelativeLayout>



</RelativeLayout>

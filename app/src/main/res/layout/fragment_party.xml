<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.partymemberconstruction.fragment.FirstFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="#E94A4E"
        android:paddingBottom="10dp"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#E94A4E"
            android:text="扩展功能"
            android:textColor="#fff"
            android:textSize="16sp" />


    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

<com.example.administrator.partymemberconstruction.CustomView.CustomerGridView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list"
    android:background="#00000000"
    android:numColumns="2"
    android:horizontalSpacing="1dp"
    android:verticalSpacing="1dp"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="总部专区"
        android:textSize="15sp"
        android:textColor="#242424"
        android:background="#f4f4f4"
        android:gravity="center_vertical|left"
        android:paddingLeft="25dp"
        android:id="@+id/one"
        />
    <com.example.administrator.partymemberconstruction.CustomView.CustomerGridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listOne"
        android:background="#fff"
        android:numColumns="4"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="交流互动"
        android:textSize="15sp"
        android:textColor="#242424"
        android:background="#f4f4f4"
        android:gravity="center_vertical|left"
        android:paddingLeft="25dp"
        android:id="@+id/two"
        />
    <com.example.administrator.partymemberconstruction.CustomView.CustomerGridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listTwo"
        android:background="#fff"
        android:numColumns="4"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="运营工具"
        android:textSize="15sp"
        android:textColor="#242424"
        android:background="#f4f4f4"
        android:gravity="center_vertical|left"
        android:paddingLeft="25dp"
        android:id="@+id/three"
        />
    <com.example.administrator.partymemberconstruction.CustomView.CustomerGridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listThree"
        android:background="#fff"
        android:numColumns="4"
        />

</LinearLayout>
    </ScrollView>
</LinearLayout>
